@model PRN_ProjectBlogs.Models.Account

@{
    ViewData["Title"] = "THÔNG TIN TÀI KHOẢN";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>THÔNG TIN TÀI KHOẢN</h1>
<div class="slim-pageheader">
    
    <h6 class="slim-pagetitle">THÔNG TIN TÀI KHOẢN</h6>
</div><!-- slim-pageheader -->
<div>
    <div class="section-wrapper mg-t-20">
        <div class="form-layout form-layout-7">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    ID:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="AccountId" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Email:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="Email" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tên :
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="FullName" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Trạng thái
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    @if (Model.Active == true)
                    {
                        <span class="badge badge-primary">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-primary">Inactive</span>
                    }
                </div><!-- col-8 -->
            </div><!-- row -->

            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Số điện thoại:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="Phone" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Đăng nhập lần cuối:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="LastLogin" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
        </div>
        <div style-"text-align:center !important" class-"form-layout-footer mg t-30">

            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class-"btn btn-success bd-0"> OK</a>


        </div>
    </div>
</div>
