@model PRN_ProjectBlogs.Models.Category

@{
    ViewData["Title"] = "THÔNG TIN DANH MỤC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>THÔNG TIN DANH MỤC</h1>
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Index">QUẢN LÝ DANH MỤC</a></li>
        <li class="breadcrumb-item active" aria-current="page">THÔNG TIN DANH MỤC</li>
    </ol>
    <h6 class="slim-pagetitle">THÔNG TIN DANH MỤC</h6>
</div><!-- slim-pageheader -->
<div>
    <div class="section-wrapper mg-t-20">
        <div class="form-layout form-layout-7">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    ID:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="CatId" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tên Danh Mục
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="CatName" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Trạng thái
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    @if (Model.Published == true)
                    {
                        <span class="badge badge-primary">Public</span>
                    }
                    else
                    {
                        <span class="badge badge-primary">Non-Public</span>
                    }
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Ảnh
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.Thumb))
                    {
                        <img width="80" height="80" src="~/images/categories/@Model.Thumb" alt="@Model.CatName" />
                    }
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Miêu tả
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="Description" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
        </div>
        <div style-"text-align:center !important" class-"form-layout-footer mg t-30">
            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" asp-route-id="@Model.CatId" class="btn btn-success bd-0" >OK</a>

               
            
        </div>
    </div>
</div>