@model PRN_ProjectBlogs.Models.Category

@{
    ViewData["Title"] = "XÓA DANH MỤC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>XÓA DANH MỤC</h1>


<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Index">XÓA DANH MỤC</a></li>
        <li class="breadcrumb-item active" aria-current="page">XÓA DANH MỤC</li>
    </ol>
    <h6 class="slim-pagetitle">XÓA DANH MỤC</h6>
</div><!-- slim-pageheader -->
<div>
    <div class="section-wrapper mg-t-20">
        <div class="form-layout form-layout-7">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    ID:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="CatId" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Title:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="CatName" class="form-control" type="text">
                </div><!-- col-8 -->
            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Mô tả :
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input asp-for="Description" class="form-control" type="text">
                </div><!-- col-8 -->

            </div><!-- row -->
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Trạng thái:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input type="checkbox" asp-for="Published"><span>Pulished</span>
                </div><!-- col-8 -->

            </div><!-- row -->
        </div>
        <div style-"text-align:center !important" class-"form-layout-footer mg t-30">
            <form asp-area="Admin" asp-controller="Categories" asp-route-id="@Model.CatId">
                <input type="hidden" asp-For="CatId" />
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class-"btn btn-success bd-0"> Back to List</a>
            </form>
        </div>
    </div>
</div>
