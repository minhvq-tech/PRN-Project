@model PRN_ProjectBlogs.Models.Category

@{
    ViewData["Title"] = "CHỈNH SỬA DANH MỤC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>CHỈNH SỬA DANH MỤC</h1>


<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Edit">CHỈNH SỬA DANH MỤC</a></li>
        <li class="breadcrumb-item active" aria-current="page">CHỈNH SỬA DANH MỤC</li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA DANH MỤC: @Model.CatName</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.CatId" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CatId" />
        <input type="hidden" asp-for="Alias" />
        <input type="hidden" asp-for="Thumb" />
       
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Danh Mục: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="CatName">
                    </div>
                </div><!-- col-4 -->
                <!--<div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Danh mục gốc: <span class="tx-danger">*</span></label>
                        <select class="form-control select2" asp-for="Parents" asp-items="@ViewBag.DanhMucGoc" required>
                            <option value="0" selected>Danh Mục Gốc</option>
                        </select>
                    </div>
                </div>--><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group ">
                        <label class="form-control-label">Mô tả: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Description">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group ">
                        <label class="form-control-label">Ảnh: <span class="tx-danger">*</span></label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group ">
                        <label>Trạng Thái:</label>
                        <br\>

                            <input class="checkbox" asp-for="Published"><span>Active</span>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Tiêu đề : <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Title">
                    </div>
                </div><!-- col-4 -->

            </div>

            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Save</button>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class-"btn btn-success bd-0"> Back to List</a>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->
