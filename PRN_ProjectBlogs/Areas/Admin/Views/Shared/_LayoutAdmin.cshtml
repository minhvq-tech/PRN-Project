<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script type="text/javascript" src="~/lib/ckeditor/ckeditor.js"></script>

    <!-- Twitter -->
    <meta name="twitter:site" content="@@themepixels">
    <meta name="twitter:creator" content="@@themepixels">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Slim">
    <meta name="twitter:description" content="Premium Quality and Responsive UI for Dashboard.">
    <meta name="twitter:image" content="http://themepixels.me/slim/img/slim-social.png">

    <!-- Facebook -->
    <meta property="og:url" content="http://themepixels.me/slim">
    <meta property="og:title" content="Slim">
    <meta property="og:description" content="Premium Quality and Responsive UI for Dashboard.">

    <meta property="og:image" content="http://themepixels.me/slim/img/slim-social.png">
    <meta property="og:image:secure_url" content="http://themepixels.me/slim/img/slim-social.png">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="600">

    <!-- Meta -->
    <meta name="description" content="Premium Quality and Responsive UI for Dashboard.">
    <meta name="author" content="ThemePixels">

    <title>@ViewData["Title"] - Admin Site</title>

    <!-- vendor css -->
    <link href="~/AdminAssets/lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminAssets/lib/Ionicons/css/ionicons.css" rel="stylesheet">
    <link href="~/AdminAssets/lib/chartist/css/chartist.css" rel="stylesheet">
    <link href="~/AdminAssets/lib/rickshaw/css/rickshaw.min.css" rel="stylesheet">

    <!-- Slim CSS -->
    <link rel="stylesheet" href="~/AdminAssets/css/slim.css">
    <link href="~/AdminAssets/css/slim.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="slim-header">
        <div class="container">
            <div class="slim-header-left">
                <h2 class="slim-logo"><a href="/">Write Your Blog<span>.</span></a></h2>
                <div class="search-box">
                    <input type="text" class="form-control" placeholder="Search">
                    <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                </div><!-- search-box -->
            </div><!-- slim-header-left -->
            <div class="slim-header-right">
                @if (User.Identity.IsAuthenticated)
                {

                   <div class="dropdown dropdown-c">
                        <a href="#" class="logged-user" data-toggle="dropdown">
                            <img src="http://via.placeholder.com/500x500" alt="">
                            <span>@User.Identity.Name.ToUpper()</span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <nav class="nav">
                                <a href="/thong-tin-tai-khoan.html" class="nav-link"><i class="icon ion-person"></i> View Profile</a>
                                <a href="/edit-profile.html" class="nav-link"><i class="icon ion-compose"></i> Edit Profile</a>
                                <a href="/doi-mat-khau.html" class="nav-link"><i class="icon ion-ios-gear"></i>Thay đổi mật khẩu</a>
                                <a href="/dang-xuat.html" class="nav-link"><i class="icon ion-forward"></i> Sign Out</a>
                            </nav>
                         </div><!-- dropdown-menu -->
                     </div><!-- dropdown -->
                }
    </div><!-- header-right -->
    </div> <!-- container-->

        </div> <!-- slim-header -->
    

    <div class="slim-navbar">
        <div class="container">
            <ul class="nav">
                <li class="nav-item with-sub active">
                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icon ion-ios-home-outline"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="nav-item with-sub">
                    <a class="nav-link" href="#">
                        <i class="icon ion-ios-chatboxes-outline"></i>
                        <span>Bài Viết</span>

                    </a>
                    <div class="sub-item">
                        <ul>
                            <li><a asp-area="Admin" asp-controller="Posts" asp-action="Index">QUẢN LÝ BÀI VIẾT</a></li>
                            <li><a asp-area="Admin" asp-controller="Posts" asp-action="Create">THÊM MỚI</a></li>
                        </ul>

                    </div>
                </li>

                <li class="nav-item with-sub">
                    <a class="nav-link" href="#">
                        <i class="icon ion-ios-analytics-outline"></i>
                        <span>HỆ THỐNG</span>
                    </a>
                    <div class="sub-item">
                        <ul>
                            <li><a asp-area="Admin" asp-controller="Categories" asp-action="Index">QUẢN LÝ DANH MỤC</a></li>
                            <li><a asp-area="Admin" asp-controller="Accounts" asp-action="Index">QUẢN LÝ TÀI KHOẢN</a></li>
                            <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ TRUY CẬP</a></li>
                        </ul>

                    </div>
                </li>
            </ul>
        </div><!-- container -->
    </div><!-- slim-navbar -->

    <div class="slim-mainpanel">
        <div class="container">
            @RenderBody()

        </div><!-- container -->
    </div><!-- slim-mainpanel -->

    <div class="slim-footer">
        <div class="container">
            <p>Copyright 2018 &copy; All Rights Reserved. Slim Dashboard Template</p>
            <p>Designed by: <a href="">ThemePixels</a></p>
        </div><!-- container -->
    </div><!-- slim-footer -->

    <script src="~/AdminAssets/lib/jquery/js/jquery.js"></script>
    <script src="~/AdminAssets/lib/popper.js/js/popper.js"></script>
    <script src="~/AdminAssets/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/AdminAssets/lib/jquery.cookie/js/jquery.cookie.js"></script>
    <script src="~/AdminAssets/lib/chartist/js/chartist.js"></script>
    <script src="~/AdminAssets/lib/d3/js/d3.js"></script>
    <script src="~/AdminAssets/lib/rickshaw/js/rickshaw.min.js"></script>
    <script src="~/AdminAssets/lib/jquery.sparkline.bower/js/jquery.sparkline.min.js"></script>

    <script src="~/AdminAssets/js/ResizeSensor.js"></script>
    <script src="~/AdminAssets/js/dashboard.js"></script>
    <script src="~/AdminAssets/js/slim.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
